<?xml version="1.0"?>
<ruleset name="WordPress">
    <description>The WordPress coding standards</description>
    <!-- Exclude directories not containing project-specific code. -->
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <file>**/*.php</file>

    <rule ref="WordPress-Core">
        <!-- Exclude Yoda conditions check -->
        <exclude name="WordPress.PHP.YodaConditions.NotYoda"/>
    </rule>
</ruleset>
